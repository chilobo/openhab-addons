	<channel-group-type id="ambient">
		<label>General Ambient</label>
		<channels>
			<channel id="ambient-error-number" typeId="ambient-error-number-channel"/>
			<channel id="ambient-operating-state" typeId="ambient-operating-state-channel"/>
			<channel id="actual-ambient-temperature" typeId="actual-ambient-temperature-channel"/>

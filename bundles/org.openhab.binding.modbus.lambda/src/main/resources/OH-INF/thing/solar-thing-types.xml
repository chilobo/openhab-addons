<?xml version="1.0" encoding="UTF-8"?>
<thing:thing-descriptions bindingId="modbus"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:thing="https://openhab.org/schemas/thing-description/v1.0.0"
	xsi:schemaLocation="https://openhab.org/schemas/thing-description/v1.0.0 https://openhab.org/schemas/thing-description-1.0.0.xsd">

	<thing-type id="solar">
		<supported-bridge-type-refs>
			<bridge-type-ref id="tcp"/>
			<bridge-type-ref id="serial"/>
		</supported-bridge-type-refs>

		<label>Solar</label>
		<description>Solar thermic component data</description>

		<config-description>
			<parameter name="refresh" type="integer" min="1" max="3600">
				<label>Refresh Interval</label>
				<description>Poll interval in seconds. Increase this if you encounter connection errors.</description>
				<default>30</default>
			</parameter>
			<parameter name="maxTries" type="integer" min="1" max="10">
				<label>Maximum Tries</label>
				<description>Number of retries before giving up reading from this thing.</description>
				<default>3</default>
			</parameter>
			<parameter name="subindex" type="integer" min="0" max="1" required="true">
				<label>Subindex</label>
				<description>Subindex for multiple solar components</description>
				<default>0</default>
			</parameter>
		</config-description>

		<channels>
			<channel id="solar-error-number" typeId="solar-error-number"/>
			<channel id="solar-operating-state" typeId="solar-operating-state"/>
			<channel id="solar-collector-temperature" typeId="solar-collector-temperature"/>
			<channel id="solar-storage-temperature" typeId="solar-storage-temperature"/>
			<channel id="solar-pump-speed" typeId="solar-pump-speed"/>
			<channel id="solar-heat-quantity" typeId="solar-heat-quantity"/>
			<channel id="solar-power-output" typeId="solar-power-output"/>
			<channel id="solar-operating-hours" typeId="solar-operating-hours"/>
		</channels>
	</thing-type>

	<channel-type id="solar-error-number">
		<item-type>Number</item-type>
		<label>Solar Error Number</label>
		<description>Error number (0 = No error)</description>
		<state readOnly="true" pattern="%d"/>
	</channel-type>

	<channel-type id="solar-operating-state">
		<item-type>Number</item-type>
		<label>Solar Operating State</label>
		<description>Operating state of the solar component</description>
		<state readOnly="true" pattern="%d"/>
	</channel-type>

	<channel-type id="solar-collector-temperature">
		<item-type>Number:Temperature</item-type>
		<label>Solar Collector Temperature</label>
		<description>Temperature of the solar collector</description>
		<state readOnly="true" pattern="%.1f %unit%"/>
	</channel-type>

	<channel-type id="solar-storage-temperature">
		<item-type>Number:Temperature</item-type>
		<label>Solar Storage Temperature</label>
		<description>Temperature of the solar storage</description>
		<state readOnly="true" pattern="%.1f %unit%"/>
	</channel-type>

	<channel-type id="solar-pump-speed">
		<item-type>Number</item-type>
		<label>Solar Pump Speed</label>
		<description>Speed of the solar pump</description>
		<state readOnly="true" pattern="%d %%"/>
	</channel-type>

	<channel-type id="solar-heat-quantity">
		<item-type>Number:Energy</item-type>
		<label>Solar Heat Quantity</label>
		<description>Heat quantity produced by solar</description>
		<state readOnly="true" pattern="%.1f %unit%"/>
	</channel-type>

	<channel-type id="solar-power-output">
		<item-type>Number:Power</item-type>
		<label>Solar Power Output</label>
		<description>Current power output of solar</description>
		<state readOnly="true" pattern="%.1f %unit%"/>
	</channel-type>

	<channel-type id="solar-operating-hours">
		<item-type>Number</item-type>
		<label>Solar Operating Hours</label>
		<description>Operating hours of solar component</description>
		<state readOnly="true" pattern="%d h"/>
	</channel-type>

</thing:thing-descriptions>
